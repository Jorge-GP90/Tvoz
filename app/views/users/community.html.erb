<h1>Users#community</h1>


    <p> Hello <%= current_user.name%>!</p> <br>
    <p> Meet the community and connect with all!</p> <br>
  


<table class="table" style="background-color:DodgerBlue;">
  <tbody>
    <% @users.each do |user| %>
    <tr class="user_management">
      <td class= "text-justify"><%= user.id %></td>
      <td class= "text-justify"><%= user.name %></td>
      <td class= "text-justify"><%= user.avatar %></td>
      <td class= "text-justify"><%= user.email %></td>
      <td class= "text-justify"><%= user.role %></td>
      <td class= "text-justify"><%= user.admin? ? 'Admin' : 'none' %></td>
      <td class= "text-justify">
        <%= render 'follow_form', user: user %>
      </td>

      <td class= "text-justify">
        <%= link_to "Show", profile_user_path(user.id),  class: "btn btn-outline-primary show-btn" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th>Audio record</th>
      <th>Audio</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.image %></td>
        <td><%= task.audio_record %></td>
        <td><%= task.audio %></td>
        <td><%= task.user_id %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>




