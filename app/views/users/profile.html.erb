<%# My table task %>

<% if current_user.tasks.ids or current_user.connected?(@user) and @user.role == "teacher"  %>
  <div class="container-fluid padding" id="loggin-top">
    <div class="row justify-content-center">
      <div class="col-lg-12" id="loggin-inner-top">
        <div class="table-responsive"> 
          <table class="table">
            <thead class="table-light">
              <tr class="text-center">
                <th>Title</th>
                <th>Image</th>
                <th>Created by</th>
                <th>Task Id</th>
                <% if current_user.role == "teacher" %> 
                  <th colspan="3"></th>
                <% else %>
                  <th colspan="3">Homework</th>
                <% end %>
              </tr>
            </thead>
            <tbody>
              <%= paginate @tasks %>
              <% @tasks.last(3).each do |task| %>
                <% if current_user.task_ids  ||  current_user.connected?(task.user) && (task.user).connected?(current_user) %>
                  <tr class="text-center">
                    <td><%= task.title %></td>
                    <% if task.image.variable? %>
                      <td><%= image_tag(task.image, width: 70) %></td>
                    <% else %>
                      <td> no image </td>
                    <% end %> 
                    <td><%= task.user.name %></td> 
                    <td><%= task.id %></td> 
                    <% if current_user.role == "teacher" %>
                      <td><%= link_to 'Show', task, class: "btn btn-outline-primary show-btn" %></td>
                      <% if task.user.id == current_user.id %>
                        <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-outline-primary show-btn" %></td>
                        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
                      <% end %>
                    <% elsif current_user && current_user.role == "student"  %>
                      <td><%= link_to 'Tvoz', task, class: "btn btn-outline-primary show-btn"  %></td>
                    <% end %>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
<% end %>

