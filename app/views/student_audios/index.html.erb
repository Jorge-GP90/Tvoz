

<h1>Student Audios</h1>

<div class="container-fluid padding" id="loggin-top">
  <div class="row justify-content-center">
    <%#= paginate @student_audios %>
    <div class="col-lg-12" id="loggin-inner-top">
      <div class="table-responsive"> 
        <table class="table">
          <thead>
            <tr class="text-center">
              <th>Title</th>
              <th>Task Audio</th>
              <th>Image</th>
              <th>Tvoz audio</th>
              <% if current_user.role == "student" %>
                <th colspan="3"></th>
              <% else %>
                <th></th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @student_audios.last(5).each do |student_audios| %>
              <tr class="text-center">
                <td><%= student_audios.task.title %></td>
                <td>
                  <% if student_audios.task.audio.attached? %>
                    <audio controls src="<%= url_for(student_audios.task.audio) %> "></audio>
                  <% else %>
                    <h5>No audio</h5>
                  <% end %>
                </td>
                <td>
                  <% if student_audios.task.image.attached? %>
                    <%= image_tag(student_audios.task.image, width: 70 ) %>
                  <% else %>
                    <h5>No image</h5>
                  <% end %>  
                </td>
                <td>
                  <% if student_audios.audio_student.attached? %>
                     <audio controls src="<%= url_for(student_audios.audio_student) %> "></audio>
                  <% else %>
                    <h5>No audio</h5>
                  <% end %>
                </td>
                <td>
                  <%= link_to 'Show', task_student_audio_path(student_audios.task.id, student_audios.id), class: "btn btn-outline-primary show-btn" %>
                </td> 
                <% if current_user.role == "student" and current_user.student_audios.ids == current_user.id %>
                <%# if current_user.id == @student_audio.id %>

                  <td>
                    <%= link_to 'Edit', edit_task_student_audio_path(student_audios.task.id, student_audios.id), class: "btn btn-outline-primary show-btn" %>
                  </td>
                  <td>
                    <%= link_to 'Destroy', task_student_audio_path(student_audios.task.id, student_audios.id),  method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<br>

