
<p>
  <strong>Title:</strong>
  <%= @task.title %>
</p>


<p>
  <strong>Audio:</strong>
  <% if @task.audio.attached? %>
    <audio controls src="<%= url_for(@task.audio) %> "></audio>
  <% end %>    
</p>

<% if @task.content? %>
<p>
  <strong>Comment:</strong>
  <%= @task.content %>
</p>
<% end %>


<p>
  <strong>Image:</strong>
  <% if @task.image.attached? %>
       <%= image_tag(@task.image, width: 500) %>
  <% end %>   
</p>

<% if @task.audio_record? %>
<p>
  <strong>Tvoz:</strong>
  <audio controls src="<%= url_for(@task.audio_record) %> "></audio>
</p>
<% else %>
  <p>
  <strong>Tvoz:</strong>
  <audio controls src="<%= url_for(@task.audio_record) %> ">No audio</audio>
</p>
<% end %>k

<p>
  <strong>User:</strong>
  <%= @task.user_id %>
</p>



<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Back', tasks_path %> |
<%= link_to root_path, class: 'order-2 pr-2 bd-highlight' do %>   
  <i class="fa-solid fa-house">Home</i> |
<% end %> 

