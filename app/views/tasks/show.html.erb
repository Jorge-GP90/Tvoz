<div class=" container-fluid padding" id="task-show-background">
  <div clas="row padding justify-content-center">
      <div class="col-lg-12" id="task-show">
        <p class="text-center">
          <strong>Title:</strong>
           <%= @task.title %>
        </p>
      </div>
      <div class="col-lg-12" id="task-show"> 
        <p>
          <% if @task.audio.attached? %>
            <audio controls src="<%= url_for(@task.audio) %> "></audio>
          <% else %>
            <p>No audio</p>
          <% end %>    
        </p>
      </div>
      <div class="col-lg-12" id="task-show">
        <p>
          <% if @task.image.attached? %>
            <%= image_tag(@task.image, id:'task-img' ) %>
          <% else %>
            <h5>No image</h5>
          <% end %>   
        </p>
      </div>
    <div class="col-lg-12" id="task-show">
      <p>
      <% if current_user.role == "student" || current_user.admin %>
        <%= link_to 'Audio input', new_task_student_audio_path(@task.id), class: "btn btn-light" %> 
      <% end %>
      </p>
    </div>

    <div class="col-lg-12" id="task-show"> 
      <p>
        <strong>User:</strong>
          <%= @task.user_id %>
      </p>
    </div>
    <div class="padding col-12 ">
      <div class="m-2 p-3 row justify-content-center">
        <% if current_user.role == "teacher" %>
          <div class="text-center m-2 ">
            <%= link_to 'Edit', edit_task_path(@task), class: "btn btn-light" %> 
          </div>
        <% end %>
        <div class="text-center m-2 ">
          <%= link_to 'Back', tasks_path, class: "btn btn-info" %> 
        </div>
      </div>
    </div>
  </div>
</div>
